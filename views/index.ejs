<%- include("header"); -%>

<div id="heading" class="box">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% for(let i=0; i < newItem.length; i++) {%>
    <div class="item">
      <input type="checkbox">
        <p><%= newItem[i] %></p>
    </div>
  <% } %>


  <form class="item" action="/" method="post">
    <input type="text" name="item" placeholder="Enter Next Item" autocomplete="off">
    <button type="submit" name="listItem" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer"); -%>
